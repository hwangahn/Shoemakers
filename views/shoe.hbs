<!DOCTYPE html>

<head>
    <title>{{shoe.name}}</title>
</head>

<body>

    <div id="category">

        <a id="man" href="/man">Man</a>
        <a id="woman" href="/woman">Woman</a>
        <a id="kid" href="/kid">Kid</a>

    </div>

    <div id="search">

        <form action="/search" method="post">
            <input type="text" name="name" id="name" rows="1" cols="60" required style="width: 500px; height: 20px;">
            <input type="submit" value = "Submit">
        </form>

    </div>

    <br><br>


    <div style="width: 50%; float:left">

        <img src="{{shoe.imageURL}}" width="500px" height="500px">

    </div>

    <div style="width: 50%; float:right">
        <h2>{{shoe.name}}</h2>
        <h3>{{shoe.category}}</h3>
        <h4>{{shoe.price}}</h4>
        <p>{{shoe.description}}</p>
    </div>
    
</body>